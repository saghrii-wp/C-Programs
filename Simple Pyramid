#include<stdio.h>

int main()
{
  int i,j,rows;
  printf("Enter the no of rows of pyramid:");
  scanf("%d", &rows);
  
  //loop for number of rows.
  for( i=1; i<=rows; i++)
  {
    
    //loop for spaces before pyramid
    for( j=1; j<=rows-i; j++)
    {
      printf(" ");
    }
    
    //loop for making pyramid
    for( j=1; j<=2*i-1; j++)
    {
      printf("*");
    }
  printf("\n");
  }
  return 0;
}
